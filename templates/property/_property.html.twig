<div class="card mb-4">
	{% if property.filename %}
		<img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt="card-img-top" style="width:100%;height:auto;">
	{% else %}
		<img src="{{ '/images/properties/Property.jpg' | imagine_filter('thumb') }}" alt="card-img-top" style="width:100%;height:auto;">
	{% endif %}
	<div class="card-body">

		<h5 class="card-title" style="font-weight:bolder;">
			<a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
				{{ property.title }}
			</a>
		</h5>
		<p class="card-text">
			<span class="text-danger" style="font-weight:bold;">{{ property.surface }}
				m<sup>2</sup>
			</span>
			-
			{{property.city }}
			({{ property.postalcode }})</p>
		<div class="text-primary" style="font-size:2rem;">
			{{ property.formattedPrice }}
			â‚¬
		</div>
	</div>
</div>
